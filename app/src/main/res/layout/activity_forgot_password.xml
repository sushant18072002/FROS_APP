<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_forgot_password"
    android:background="@drawable/forgotpassword_bakc">

    <TextView
        android:id="@+id/nav_header_username"
        android:layout_width="296dp"
        android:layout_height="50dp"
        android:paddingLeft="10sp"
        android:paddingTop="8sp"
        android:paddingRight="10sp"
        android:text="@string/Phone_no"
        android:textColor="@color/phone"
        android:textSize="23sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.359" />

    <EditText
        android:id="@+id/phone_no"
        android:layout_width="296dp"
        android:layout_height="57dp"
        android:autofillHints=""
        android:background="@drawable/login_inputdesign"
        android:digits="0123456789+"
        android:drawableStart="@drawable/phone_logo"
        android:drawablePadding="10dp"
        android:ems="10"
        android:inputType="phone"
        android:labelFor="@id/nav_header_username"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_header_username"
        app:layout_constraintVertical_bias="0.068" />

    <EditText
        android:id="@+id/edit_otp"
        android:layout_width="297dp"
        android:layout_height="49dp"
        android:background="@drawable/login_inputdesign"
        android:drawableStart="@drawable/otp"
        android:ems="10"
        android:hint=""
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:paddingLeft="15sp"
        android:paddingRight="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.576" />

    <Button
        android:id="@+id/button_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_box_design"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:text="@string/genera_otp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.373"
        app:layout_constraintStart_toStartOf="@+id/edit_otp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.672" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="116dp"
        android:layout_height="38dp"
        android:background="@drawable/login_box_design"
        android:drawableEnd="@drawable/next_icon"
        android:gravity="center"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:text="@string/click"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_no"
        app:layout_constraintVertical_bias="0.493" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="336dp"
        android:layout_height="64dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/forgot_password"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/nav_header_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.569" />

</androidx.constraintlayout.widget.ConstraintLayout>