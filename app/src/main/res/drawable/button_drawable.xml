<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3D88DC" />
            <gradient android:angle="-90" android:endColor="#C1EC90" android:startColor="#F4CA8A" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#915AF4" />
            <gradient android:angle="-90" android:endColor="#7AF0FF" android:startColor="#D8E173" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#AA8282" />
            <gradient android:angle="-90" android:endColor="#E299EF" android:startColor="#D8E173" />
        </shape>
    </item>
</selector>