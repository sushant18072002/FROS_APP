<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="#FFC4D8" />
            <gradient android:angle="-90" android:startColor="#B8D9F3" android:endColor="#EBF48B" />
        </shape>
    </item>
    <item
        android:top="100dp"
        android:bottom="0dp"
        android:left="-70dp"
        android:right="-70dp">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:innerRadius="50dp"
            android:shape="rectangle"
            android:useLevel="true">

            <stroke android:width="1dip" android:color="@color/green_temp" />
            <gradient android:angle="-90" android:startColor="@color/green_temp" android:endColor="#B8D9F3"  />
            <corners

                android:bottomLeftRadius="0dp"
                android:topLeftRadius="260dp"
                android:topRightRadius="260dp"/>

        </shape>
    </item>
