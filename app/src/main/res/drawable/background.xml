<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#F8E5A1" />
            <gradient android:angle="-90" android:startColor="#D1BEF4" android:endColor="#94C9F3"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#FAE081" />
            <gradient android:angle="-90" android:startColor="#FFC9DB" android:endColor="#FAD195"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#BEF8FF" />
            <gradient android:angle="90" android:startColor="#FFF497" android:endColor="#BAFABD" />
        </shape>
    </item>
</selector>